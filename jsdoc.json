{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["packages"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules|dist|.test.js)"
  },
  "plugins": [
    "node_modules/better-docs/typescript"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/references",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "Packages"
    }
  }
}