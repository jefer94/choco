{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["packages"],
    "excludePattern": "(node_modules|dist|.test.js)"
  },
  "plugins": [
      "plugins/markdown",
      "node_modules/better-docs/component"
  ],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/references",
    "recurse": true,
    "verbose": true,
    "template": "node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "Packages"
    }
  }
}