FROM nginx:alpine

ENV EMAIL=jdefreitaspinto@gmail.com
ENV DOMAINS=""
ENV SERVICES=""

EXPOSE 80 443

RUN apk add --no-cache bash certbot certbot-nginx

COPY ./configs/nginx/nginx.conf /etc/nginx/nginx.conf
COPY ./configs ./configs

RUN chmod +x ./configs/nginx/entrypoint.sh
CMD ["bash", "./configs/nginx/entrypoint.sh"]
